<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean id="vendingmachine" class="it.fmaida.vendingmachine.model.VendingMachine">
		<property name="itemsList">
			<list value-type="it.fmaida.vendingmachine.model.Item">
				<bean class="it.fmaida.vendingmachine.model.Item">
					<property name="name" value="coffee"/>
					<property name="price" value="2" />
				</bean>
				<bean class="it.fmaida.vendingmachine.model.Item">
					<property name="name" value="tea" />
					<property name="price" value="1" />
				</bean>
				<bean class="it.fmaida.vendingmachine.model.Item">
					<property name="name" value="water" />
					<property name="price" value="1" />
				</bean>
				<bean class="it.fmaida.vendingmachine.model.Item">
					<property name="name" value="vodka" />
					<property name="price" value="5" />
				</bean>
				<bean class="it.fmaida.vendingmachine.model.Item">
					<property name="name" value="beer" />
					<property name="price" value="4" />
				</bean>
			</list>
		</property>
	</bean>		
</beans>
