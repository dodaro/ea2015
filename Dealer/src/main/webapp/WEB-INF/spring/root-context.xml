<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Root Context: defines shared resources visible to all other web components -->

	<bean id="p1" class="it.unical.dealer.model.Product">
		<property name="name" value="Coffe"></property>
		<property name="price" value="1"></property>
	</bean>

	<bean id="p2" class="it.unical.dealer.model.Product">
		<property name="name" value="Tea"></property>
		<property name="price" value="3"></property>
	</bean>
	<bean id="p3" class="it.unical.dealer.model.Product">
		<property name="name" value="Snack"></property>
		<property name="price" value="10"></property>
	</bean>
	<bean id="p4" class="it.unical.dealer.model.Product">
		<property name="name" value="Milk"></property>
		<property name="price" value="6"></property>
	</bean>
	<bean id="p5" class="it.unical.dealer.model.Product">
		<property name="name" value="Sandiwich"></property>
		<property name="price" value="8"></property>
	</bean>
	<bean id="p6" class="it.unical.dealer.model.Product">
		<property name="name" value="Chips"></property>
		<property name="price" value="4"></property>
	</bean>

	<bean id="p7" class="it.unical.dealer.model.Product">
		<property name="name" value="Chewingum"></property>
		<property name="price" value="7"></property>
	</bean>
	<bean id="p8" class="it.unical.dealer.model.Product">
		<property name="name" value="Water"></property>
		<property name="price" value="2"></property>
	</bean>

	<bean id="d" class="it.unical.dealer.model.DealerMachine">
		<property name="products">
			<list>
				<ref bean="p1" />
				<ref bean="p2" />
				<ref bean="p3" />
				<ref bean="p4" />
				<ref bean="p5" />
				<ref bean="p6" />
				<ref bean="p7" />
				<ref bean="p8" />
			</list>
		</property>
	</bean>
</beans>
