<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	<bean id="seller" class="com.davide.app.model.CarSeller" scope="prototype">
		<property name="cars">
			<list value-type="com.davide.app.model.Car">
				<bean id="car1" class="com.davide.app.model.Car">
					<property name="name" value="panda">
					</property>
					<property name="idColor" value="-1">
					</property>
					<property name="price" value="10000">
					</property>
					<property name="availableColor">
						<list>
			                <value>blue</value>
			                <value>red</value>
			                <value>green</value>
			            </list>
					</property>
				</bean>
				<bean id="car2" class="com.davide.app.model.Car">
					<property name="name" value="punto">
					</property>
					<property name="idColor" value="-1">
					</property>
					<property name="price" value="15000">
					</property>
					<property name="availableColor">
						<list>
			                <value>blue</value>
			                <value>red</value>
			                <value>green</value>
			            </list>
					</property>
				</bean>
				<bean id="car3" class="com.davide.app.model.Car">
					<property name="name" value="freemont">
					</property>
					<property name="idColor" value="-1">
					</property>
					<property name="price" value="20000">
					</property>
					<property name="availableColor">
						<list>
			                <value>blue</value>
			                <value>red</value>
			                <value>green</value>
			            </list>
					</property>
				</bean>
			</list>
		</property>
		<property name="idSelect" value="-1">
		</property>
	</bean>
	
</beans>
